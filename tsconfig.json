{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "ES2020",
         "DOM"
      ],
      "target": "ES2020",                    
      "module": "commonjs",                  
      "rootDir": "./",                       
      "esModuleInterop": true,               
      "outDir": "./build",                   
      "emitDecoratorMetadata": true,         
      "experimentalDecorators": true,        
      "strict": true,                        
      "sourceMap": true
   },
   "include": ["src/**/*.ts", "server.ts"],
   "exclude": ["node_modules"]
}